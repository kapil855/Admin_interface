<p id="notice"><%= notice %></p>

<h1 class="bg-primary w-75 mx-auto text-white text-center py-2">Articles</h1>

<table class="table-bordered w-75 mx-auto">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= article.user_id %></td>
        <td>
          <div class="dropdown">
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <a class="dropdown-item" href="#"><%= link_to 'Show', admin_article_path(article) %></a>
              <a class="dropdown-item" href="#"><%= link_to 'Edit', edit_admin_article_path(article) %></a>
              <a class="dropdown-item" href="#"><%= link_to 'Destroy', admin_articles_path, method: :delete, data: { confirm: 'Are you sure?' } %></a>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_admin_article_path, class: 'btn btn-primary ml-5'%>
